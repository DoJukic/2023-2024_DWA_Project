@using DBScaffold.Models
@{
    Layout = "_Layout";

    var user = ViewContext.HttpContext.User;
    if (user == null)
    {
        Layout = "_Layout";
    }
    else if (user.IsInRole(nameof(Administrator)))
    {
        Layout = "_LayoutAdmin";
    }
    else if (user.IsInRole("User"))
    {
        Layout = "_LayoutUser";
    }
}